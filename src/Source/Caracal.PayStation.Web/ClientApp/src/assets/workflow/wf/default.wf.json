{
  "name" : "default",
  "activities": [
    {
      "name": "start",
      "type": "page-activity",
      "controls": [
        {"tag" : "h1", "innerHTML": "Polaris" },
        {"tag" : "div", "innerHTML": "Welcome to polaris workflow" },
        {"tag":  "apx-input", "caption":  "Username", "id":"login.username", "value": "" },
        {"tag":  "apx-input", "type": "password", "caption":  "Password", "id":"login.password", "value": "" },
        {"tag" : "apx-button", "caption": "Next Page", "next": "next-page", "isDefault": true }
      ]
    },
    {
      "name": "next-page",
      "type": "page-activity",
      "controls": [
        {"tag" : "h1", "innerHTML": "Polaris" },
        {"tag" : "div", "innerHTML": "Are you sure {{login.username}} you want to login?" },
        {"tag" : "apx-button", "caption": "Go Back", "next": "start", "isDefault": true },
        {"tag" : "apx-button", "caption": "Login", "next": "login" }
      ]
    },
    {
      "name": "login",
      "type": "api-activity",
      "next": "logged-in",
      "endpoints": [
        {
          "url": "[AUTH_API]/user/login",
          "method": "POST",
          "headers": [
            {"content-type": "application/json"}
          ],
          "mappings":[
            {"client": "login.username", "remote": "username", "direction": "out"},
            {"client": "login.password", "remote": "password", "direction": "out"},
            {"client": "context.welcomeMessage", "remote": "message", "direction": "in"}
          ]
        }
      ]
    },
    {
      "name": "logged-in",
      "type": "page-activity",
      "controls": [
        {"tag" : "h1", "innerHTML": "Polaris" },
        {"tag" : "div", "innerHTML": "{{context.welcomeMessage}}!!" },
        {"tag" : "apx-button", "caption": "Go Back", "next": "start", "isDefault": true }
      ]
    }
  ]
}
