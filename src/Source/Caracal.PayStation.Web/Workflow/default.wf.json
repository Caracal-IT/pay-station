        }
      ]
    },
    {
      "name": "landing",
      "type": "page-activity",
      "controls": [
        {"tag": "h1", "id": "pageHeader", "innerHTML": "PayStation - {{[VERSION]}}" },
        {"tag": "dcx-menu", "items": "menu" },
        {"tag": "dcx-main"},
        {"tag":  "footer", "innerHTML": "&copy;Caracal"}
      ]
    }
  ]
}
